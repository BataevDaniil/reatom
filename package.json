{
  "name": "reatom",
  "private": true,
  "description": "Expressive and deterministic state manager",
  "scripts": {
    "postinstall": "npx simple-git-hooks && turbo run build --filter=framework",
    "build": "turbo run build",
    "test": "turbo run test",
    "prettify": "prettier --write **/*.{js,ts,md}",
    "prettify:watch": "onchange **/*.{js,ts,md} -- prettier --write {{changed}}",
    "package-generator": "tsx tools/new-package.ts",
    "update": "npx npm-check-updates -u"
  },
  "workspaces": [
    "packages/*"
  ],
  "simple-git-hooks": {
    "commit-msg": "npx commitlint -e '$@'"
  },
  "author": "artalar",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/artalar/reatom.git"
  },
  "engines": {
    "npm": ">=8.0.0"
  },
  "bugs": {
    "url": "https://github.com/artalar/reatom/issues"
  },
  "homepage": "https://github.com/artalar/reatom/tree/v2",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@frp-ts/core": "^1.0.0-beta.2",
    "@ngrx/store": "^14.3.0",
    "@preact/signals-core": "^1.2.0",
    "@types/node": "latest",
    "@types/use-sync-external-store": "^0.0.3",
    "cellx": "^1.10.29",
    "cross-fetch": "^3.1.5",
    "effector": "^22.3.0",
    "microbundle": "^0.15.1",
    "mobx": "^6.6.1",
    "mol_wire_lib": "^1.0.296",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redux": "^4.2.0",
    "reselect": "^4.1.6",
    "rimraf": "^3.0.2",
    "s-js": "^0.4.9",
    "simple-git-hooks": "^2.8.0",
    "solid-js": "^1.5.4",
    "tsx": "^3.9.0",
    "turbo": "^1.4.7",
    "typescript": "^4.8.2",
    "use-sync-external-store": "^1.2.0",
    "usignal": "^0.7.15",
    "uvu": "^0.5.6",
    "wonka": "^6.0.0",
    "zx": "^7.0.8"
  },
  "keywords": [
    "state",
    "store",
    "state-manager",
    "state manager",
    "reactive",
    "reactivity",
    "flux",
    "atom",
    "reatom",
    "@reatom"
  ]
}
