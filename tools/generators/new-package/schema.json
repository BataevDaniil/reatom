{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "new-package",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "private": {
      "type": "boolean",
      "description": "Private package",
      "$default": false
    }
  },
  "required": ["name"]
}
